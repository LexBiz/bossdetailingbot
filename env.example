############################################################
# BOSS DETALING — пример .env (переименуй в ".env")
############################################################

# Telegram bot token (от @BotFather)
BOT_TOKEN=your_telegram_bot_token_here

# Куда отправлять заявки (ID группы/канала/чата)
# Как получить:
# 1) добавь бота в группу
# 2) напиши в группе: /chatid
BOOKINGS_CHAT_ID=-1001234567890

# Админ-панель (/admin) — пароль (включает админ-режим в текущем чате после ввода)
ADMIN_PASSWORD=change_me

# PostgreSQL (выбери ОДИН вариант)
# Вариант A (прод/хостинг): единая строка
DATABASE_URL=postgres://user:password@host:5432/boss_detailing

# Вариант B (локально): отдельные переменные
PGHOST=localhost
PGPORT=5432
PGUSER=postgres
PGPASSWORD=postgres
PGDATABASE=boss_detailing

# Webhook / Polling
USE_WEBHOOK=false
WEBHOOK_URL=https://your-domain.com/api/webhook
PORT=3000

# Логотип при /start
LOGO_PATH=./assets/logo.jpg
LOGO_URL=https://dummyimage.com/800x400/000000/ffffff&text=BOSS+DETALING


